{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "importsNotUsedAsValues": "remove",
    "moduleDetection": "force",
    "noEmit": true,

    /* JSX e Outros */
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true, // Útil para importação de arquivos JSON
    "allowJs": false, // Permite arquivos JS em um projeto TS

    /* Alias de Caminho (@/) */
    "baseUrl": ".",

    /* Rigidez e Linting (Melhores Práticas) */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, // Adiciona verificação de acesso a índices
    "noImplicitReturns": true, // Garante que as funções sempre retornem um valor
    "noPropertyAccessFromIndexSignature": true, // Se quiser ser mais rigoroso com propriedades
    "noUncheckedSideEffectImports": true, // Já estava, é bom manter
    "ignoreDeprecations": "5.0", // Útil para suprimir avisos de sintaxe antiga
    "forceConsistentCasingInFileNames": true // Garante consistência nos nomes de arquivos
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "vite.config.ts",
    "typings/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}